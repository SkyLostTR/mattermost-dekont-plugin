{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Mattermost Plugin",
            "type": "shell",
            "command": "go",
            "args": ["build", "-o", "plugin"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "go",
            "args": ["mod", "tidy"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Create Plugin Bundle",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "New-Item -ItemType Directory -Force -Path 'dist\\server'; Copy-Item plugin dist\\server\\plugin-linux-amd64; Copy-Item plugin.json dist\\; Push-Location dist; tar -czf ..\\mattermost-dekont-plugin-1.0.0-linux.tar.gz *; Pop-Location"
            ],
            "group": "build",
            "dependsOn": "Build Mattermost Plugin",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "rm -f plugin *.tar.gz && rm -rf dist/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build and Bundle for Linux",
            "type": "shell",
            "command": "powershell",
            "args": ["-ExecutionPolicy", "Bypass", "-File", "./build-linux.ps1"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}